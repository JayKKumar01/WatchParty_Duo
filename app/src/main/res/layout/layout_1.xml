<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LYOUT1"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="2dp"
    android:background="@drawable/bg_layout">

    <TextView
        android:id="@+id/userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="qwe qwerty qwertyu ddjj"
        android:fontFamily="serif"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        android:minWidth="100dp"
        android:maxWidth="200dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:elevation="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:background="@drawable/bg_name"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/roomCode" />

    <TextView
        android:id="@+id/roomCode"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:shadowRadius="5"
        android:text="123456"
        android:elevation="4dp"
        android:fontFamily="times"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/theme_color"
        android:textSize="13sp"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/refresh" />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="35dp"
        android:layout_height="0dp"
        android:onClick="refreshLayout"
        app:layout_constraintDimensionRatio="1"
        android:background="@drawable/bg_peer"
        android:src="@drawable/refresh"
        android:padding="8dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
