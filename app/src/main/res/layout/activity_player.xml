<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlayerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LYOUT1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp"
        android:background="@drawable/bg_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">


        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="qwe qwerty qwertyu ddjj"
            android:fontFamily="serif"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:minWidth="100dp"
            android:maxWidth="200dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@drawable/bg_name"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/roomCode"
            />
        <TextView
            android:id="@+id/roomCode"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:shadowRadius="5"
            android:text="123456"
            android:elevation="4dp"
            android:fontFamily="times"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/theme_color"
            android:textSize="13sp"
            android:textStyle="bold|italic"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/refresh"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:onClick="refreshLayout"
            app:layout_constraintDimensionRatio="1"
            android:background="@drawable/bg_peer"
            android:src="@drawable/refresh"
            android:padding="8dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/refresh"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/playerLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LYOUT1"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/all_player_view"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/exo_player_view"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.media3.ui.PlayerView
                    android:id="@+id/player_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/black"
                    app:controller_layout_id="@layout/custom_controls"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:resize_mode="fit"
                    app:show_buffering="when_playing"
                    app:use_controller="true"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rightBox"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_right_box"
                    android:clickable="false"
                    android:visibility="gone"
                    app:layout_constraintDimensionRatio=".88"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rightSeekTXT"
                        android:text="+10"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:fontFamily="serif"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/arrow1"
                        app:layout_constraintTop_toTopOf="parent"/>


                    <ImageView
                        android:id="@+id/arrow1"
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:src="@drawable/right_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/arrow2"
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:src="@drawable/right_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toRightOf="@+id/arrow1"
                        app:layout_constraintRight_toRightOf="@id/arrow1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/arrow3"
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:src="@drawable/right_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toRightOf="@+id/arrow2"
                        app:layout_constraintRight_toRightOf="@id/arrow2"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/leftBox"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_left_box"
                    android:clickable="false"
                    android:visibility="gone"
                    app:layout_constraintDimensionRatio=".88"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent=".5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/leftSeekTXT"
                        android:text="-10"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:fontFamily="serif"
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/Larrow1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/Larrow1"
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:src="@drawable/left_arrow"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/Larrow2"
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:src="@drawable/left_arrow"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintLeft_toLeftOf="@id/Larrow1"
                        app:layout_constraintRight_toLeftOf="@id/Larrow1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/Larrow3"
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:src="@drawable/left_arrow"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintLeft_toLeftOf="@id/Larrow2"
                        app:layout_constraintRight_toLeftOf="@id/Larrow2"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/online_player_view"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/addMediaLayout"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="OFFLINE"
                android:onClick="offlineAddLayout"
                android:id="@+id/offlineBtn"
                android:textAlignment="center"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintWidth_percent=".5"
                android:shadowRadius="5"
                android:background="@drawable/bg_selected"
                android:elevation="4dp"
                android:fontFamily="times"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/theme_color"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ONLINE"
                android:id="@+id/onlineBtn"
                android:onClick="onlineAddLayout"
                android:textAlignment="center"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintWidth_percent=".5"
                android:shadowRadius="5"
                android:background="@drawable/bg_not_selected"
                android:elevation="4dp"
                android:fontFamily="times"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white_200"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/offlineMediaLayout"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/offlineBtn">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:id="@+id/imgAddOfflineMedia"
                    android:onClick="selectVideo"
                    app:layout_constraintDimensionRatio="1"
                    android:background="@drawable/bg_add"
                    android:src="@drawable/add_movie"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Media: index.mp4"
                    android:visibility="gone"
                    android:id="@+id/currentMediaTxt"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_bias="0"
                    android:padding="5dp"
                    android:textSize="11sp"
                    android:fontFamily="@font/istok_web_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play Media"
                    android:onClick="startSyncPlay"
                    android:visibility="gone"
                    android:id="@+id/playOffileVideo"
                    android:textAlignment="center"
                    app:layout_constraintVertical_bias="0"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_selected"
                    android:fontFamily="times"
                    android:padding="5dp"
                    android:textColor="@color/theme_color"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgAddOfflineMedia"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/onlineMediaLayout"
                android:visibility="gone"
                android:background="@color/discord_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/offlineBtn">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="https://www.youtube.com/oembed?url=https://www.youtube.com/watch?v=whpRykY0Fu0&amp;format=json"
                    android:visibility="gone"
                    android:id="@+id/currentOnlineVideoTxt"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_bias="0"
                    android:padding="5dp"
                    android:textSize="11sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/istok_web_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutJoinYouTube"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintWidth_percent=".8"
                    android:background="@drawable/layout_border"
                    app:layout_constraintTop_toBottomOf="@id/currentOnlineVideoTxt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/btnJoinYouTube"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginBottom="10dp">



                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter YouTube Url (Optional)"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textColorHint="@color/white_100"
                            app:boxStrokeColor="@color/white"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/youtubeUrlET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="11sp"
                                android:inputType="text"/>
                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnCreateYouTube"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Create"
                        android:onClick="createYouTubeUrl"
                        android:textSize="13sp"
                        android:background="@drawable/button_bg"
                        android:textColor="@color/theme_color"
                        app:layout_constraintWidth_percent=".49"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintBottom_toBottomOf="parent" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnJoinYouTube"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Join"
                        android:onClick="joinYouTubeVideo"
                        android:textSize="13sp"
                        android:background="@drawable/button_bg"
                        android:textColor="@color/theme_color"
                        app:layout_constraintWidth_percent=".49"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:background="@color/white_200"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/partyLayout"
        android:visibility="visible"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playerLayout"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/livechat"
            android:background="@color/theme_color"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Feed"
                android:id="@+id/live_feed"
                android:fontFamily="serif"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/white"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Count: 1"
                android:id="@+id/userCount"
                android:fontFamily="@font/istok_web_regular"
                android:textSize="11sp"
                android:paddingStart="5dp"
                android:textColor="#065981"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/live_feed"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="0dp"
                android:onClick="toggleLayout"
                app:layout_constraintDimensionRatio="1"
                android:background="@drawable/bg_peer"
                android:src="@drawable/baseline_chat_bubble_24"
                android:padding="8dp"
                android:layout_marginEnd="25dp"
                android:id="@+id/live_toogle"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/live_close"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/bg_peer"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                android:src="@drawable/baseline_circle_24"
                android:id="@+id/circle"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/live_toogle"
                app:layout_constraintLeft_toLeftOf="@id/live_toogle"
                app:layout_constraintTop_toTopOf="@id/live_toogle"
                app:layout_constraintRight_toRightOf="@id/live_toogle"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1"
                android:background="@drawable/bg_peer"
                android:src="@drawable/baseline_close_24"
                android:padding="8dp"
                android:layout_marginEnd="25dp"
                android:id="@+id/live_close"
                android:onClick="closeLive"
                android:visibility="gone"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/grey"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/peerLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/livechat"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                app:layout_constraintVertical_bias="1"
                android:id="@+id/peer_bottom_bar"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/micBtn"
                    android:onClick="mic"
                    android:elevation="4dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_call"
                    android:padding="10dp"
                    android:src="@drawable/mic_on"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/callBtn"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/callBtn"
                    android:elevation="4dp"
                    android:layout_margin="2dp"
                    android:onClick="endCall"
                    android:background="@drawable/bg_call"
                    android:padding="10dp"
                    android:src="@drawable/call_end"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/deafenBtn"
                    android:elevation="4dp"
                    android:onClick="deafen"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_call"
                    android:padding="10dp"
                    android:src="@drawable/deafen_off"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintLeft_toRightOf="@id/callBtn"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/chatLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/livechat"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewChats"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_chats"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bottomBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bottomBar"
                app:layout_constraintWidth_percent=".98"
                app:layout_constraintVertical_bias="1"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bottomBar_edit"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/bg_bottombar"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/send"
                    app:layout_constraintTop_toTopOf="parent">

                    <EditText
                        android:id="@+id/messageTXT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_send_edit"
                        android:fontFamily="@font/istok_web_regular"
                        android:hint="Send a message"
                        android:importantForAutofill="no"
                        android:inputType="textLongMessage|textMultiLine|textCapSentences"
                        android:lineSpacingMultiplier=".8"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/layoutPick"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry,TextFields" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/layoutPick"
                        app:layout_constraintHorizontal_bias="1"
                        app:layout_constraintVertical_bias="1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="0dp"
                            app:layout_constraintDimensionRatio="1"
                            android:padding="10dp"
                            android:id="@+id/camera"
                            android:src="@drawable/camera"
                            app:layout_constraintHorizontal_bias="1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            tools:ignore="UsingOnClickInXml" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="8dp"
                    android:id="@+id/send"
                    android:onClick="sendMessage"
                    android:background="@drawable/bg_send"
                    android:src="@drawable/ic_baseline_send_24"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:ignore="UsingOnClickInXml" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>